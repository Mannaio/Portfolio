<h4>
    {{#if track}}
        <span class="track-status">
            {{#if isBuffering}}
                <i class="fa fa-spinner fa-spin"></i>
            {{else}}
                {{#if isPlaying}}
                    <a {{ action 'pauseTrack' }}>
                        <i class="fa fa-pause"></i>
                    </a>
                {{else}}

                    {{#if isPaused}}
                        <a {{ action 'resumeTrack' }}>
                            <i class="fa fa-play"></i>
                        </a>
                    {{else}}
                        <a {{ action 'playTrack'}}>
                            <i class="fa fa-play"></i>
                        </a>
                    {{/if}}
                {{/if}}
            {{/if}}
        </span>
    {{/if}}

    <span class="track-times">#{{formattedPosition}} / #{{formattedDuration}}</span>
</h4>

<div class="track-progress progress progress">
    <div class="progress-bar progress-bar-primary" aria-valuemax="100" aria-valuemin="0" role="progressbar">
    </div>
</div>