<div class="container-fluid">
    <div class="row-fluid">
        <div class="col-md-2 col-xs-3">
            {{outlet 'player'}}
        </div>
        <div class="col-md-10 col-xs-9">
            <div class="row">
                <div class="col-xs-12">
                    <div class="artist-form">
                        <form {{action "goToArtist" on="submit"}}>
                            {{input value=artistName classNames="col-xs-12 form-control artist-input" autofocus="true" placeholder="type a soundcloud username, then press enter"}}
                        </form>
                    </div>
                    {{outlet}}
                </div>
            </div>
        </div>
    </div>
</div>